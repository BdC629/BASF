

{% if (variable_get('user_register', USER_REGISTER_VISITORS_ADMINISTRATIVE_APPROVAL) != USER_REGISTER_ADMINISTRATORS_ONLY) %}
<div class="modal" id="{{ render(identifier) }}{% endif %}" tabindex="-1" role="dialog" aria-labelledby="{{ render(identifier) }}Label" aria-hidden="true">
  <div class="modal-dialog" style="{{ render(modal_style) }}" role="document">
    <div class="modal-content form-elegant">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 dark-grey-text font-weight-bold my-3" id="{{ render(identifier) }}Label">
          {{ render(header) }}
        </h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-4">
        {{ render(modal_form) }}
      </div>
      {% if (sso) %}
      <div class="modal-footer mx-5 pt-3 mb-1">
        {{ render(sso) }}{% endif %}
      </div>
      {% endif %}
    </div>
  </div>
</div>
{% endif %}
